{
    "name": "webpack-javascript-template",
    "version": "1.0.0",
    "description": "A Javascript project template for creating JavaScript applications with ease.",
    "main": "index.js",
    "scripts": {
        "watch": "webpack serve --config webpack/webpack.dev.js",
        "build": "webpack build --config webpack/webpack.prod.js",
        "dev": "npm run watch",
        "bundle": "npm run build",
        "prod": "npm run build",
        "serve": "npm run build && serve dist",
        "format": "prettier --check src/scripts/**",
        "format:write": "prettier --write src/scripts/**"
    },
    "keywords": [
        "template",
        "javascript",
        "js",
        "webpack",
        "webpack5",
        "babel",
        "babeljs"
    ],
    "author": "Anthony I. Jackson Jr.",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.25.8",
        "@eslint/js": "^9.12.0",
        "babel-loader": "^9.2.1",
        "copy-webpack-plugin": "^12.0.2",
        "eslint": "^9.12.0",
        "globals": "^15.11.0",
        "html-webpack-plugin": "^5.6.0",
        "prettier": "^3.3.3",
        "serve": "^14.2.3",
        "stylelint": "^16.10.0",
        "stylelint-config-standard": "^36.0.1",
        "typescript-language-server": "^4.3.3",
        "webpack": "^5.95.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.1.0",
        "webpack-merge": "^6.0.1",
        "webpack-obfuscator": "^3.5.1"
    }
}
